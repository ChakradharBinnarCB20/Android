<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/itim"
                    android:gravity="center"
                    android:text="PRANALI"
                    android:textColor="#77202f"
                    android:textSize="50dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="47dp"
                    android:fontFamily="@font/itim"
                    android:gravity="center"
                    android:text="Login System"
                    android:textColor="#77202f"
                    android:textSize="30dp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <ImageView
                android:layout_marginTop="30dp"
                android:layout_width="530dp"
                android:layout_height="326dp"
                android:layout_gravity="center"
                android:src="@drawable/login_img1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:textSize="30dp"
                android:textColor="#1a2e35"
                android:fontFamily="@font/itim"
                android:text="Username"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edit_login_email"
                android:layout_marginTop="5dp"
                android:drawablePadding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/edit_text_bg"
                android:drawableLeft="@drawable/drawable_left_custom_usrename"
                android:elevation="20dp"
                android:ems="10"
                android:hint="Enter Username"
                android:fontFamily="@font/averialbre_regular"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:shadowColor="#60e2aa"
                android:textSize="25dp">
            </EditText>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:textSize="30dp"
                android:textColor="#1a2e35"
                android:fontFamily="@font/itim"
                android:text="Password"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edit_login_pass"
                android:layout_marginTop="5dp"
                android:drawablePadding="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/edit_text_bg"
                android:drawableLeft="@drawable/drawable_left_custom_password"
                android:elevation="20dp"
                android:ems="10"
                android:hint="Enter Password"
                android:fontFamily="@font/averialbre_regular"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:shadowColor="#60e2aa"
                android:textSize="25dp">
            </EditText>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_signin_login"
                android:background="@drawable/connect_button"
                android:backgroundTint="#77202f"
                android:fontFamily="@font/itim"
                android:textSize="25dp"
                android:padding="8dp"
                android:text="LogIn"
                android:textColor="@color/white"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>